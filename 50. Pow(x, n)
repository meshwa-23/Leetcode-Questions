class Solution {
    public double myPow(double x, int n) {
        
        if (n == 0) {
            return 1.0;
        }

        if (n < 0) {
            x = 1 / x;
            n = -n;
        }

        double result = 1.0;
        while (n > 0) {
            // If n is odd, multiply x with the result
            if ((n & 1) == 1) {
                result *= x;
            }
            // Square x
            x *= x;
            // Halve n
            n >>= 1;
        }
        return result;
    }
}
    
